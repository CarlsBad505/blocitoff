<tr id="item-<%= item.id %>">
  <td><%= item.name %></td>
  <td><%= distance_of_time_in_words(item.created_at, Time.now) %> ago</td>
  <td><%= distance_of_time_in_words(Time.now, item.created_at + 7.day) %></td>
  <td><%= link_to "Delete", [item.user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok ' %></td>
</tr>