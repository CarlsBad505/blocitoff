<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-12">
    <h1 id="header"><%= "#{@user.name}'s To Do List!" %></h1>
    <p id="header">Contact: <%= mail_to "Email #{@user.name}", @user.email %></p>
  </div>
</div>

<div class="container">
  <div class="col-md-4" id="form-pad">
    <h3 id="form-header">Create New To Do Item:</h3>
    <div class="new-item">
      <%= render partial: 'items/form', locals: { user: @user, item: Item.new } %>
    </div>
  </div>
  
  <table class="table">
    <thead>
      <th>To-Do's</th>
      <th>Created At</th>
      <th>Time Remaining</th>
      <th>Complete?</th>
    </thead>
    <tbody class="js-items">
      <% @user.items.each do |item| %>
        <%= render partial: "items/item", locals: {item: item} %>
      <% end %>
    </tbody>
  </table>
</div>

